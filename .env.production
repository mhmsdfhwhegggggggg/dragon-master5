# Production Environment Configuration
NODE_ENV=production
APP_NAME=Dragon Telegram Pro
APP_VERSION=1.0.0
PORT=3000
EXPO_PORT=8081

# Database Configuration
# For production, use PostgreSQL or MySQL
# DATABASE_URL=postgresql://user:password@host:5432/database
# DATABASE_URL=mysql://user:password@host:3306/database
DATABASE_URL=file:./production.db

# Redis Configuration (Required for BullMQ)
REDIS_URL=redis://127.0.0.1:6379

# Telegram API Credentials
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=YOUR_API_ID_HERE
TELEGRAM_API_HASH=YOUR_API_HASH_HERE

# Security Keys (Generate strong random keys)
JWT_SECRET=your_strong_jwt_secret_key_minimum_32_characters_long_here
SESSION_SECRET=your_strong_session_secret_key_minimum_32_characters_long_here
ENCRYPTION_KEY=your_32_character_encryption_key_here_exactly_32_chars

# OAuth Configuration
OAUTH_SERVER_URL=https://oauth.manus.im
VITE_APP_ID=your_app_id_here
OWNER_OPEN_ID=your_owner_id_here

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Features
ENABLE_LICENSE_CHECK=true
ANTI_BAN_ENABLED=true
DEBUG=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Proxy Configuration (Optional)
# PROXY_HOST=your_proxy_host
# PROXY_PORT=your_proxy_port
# PROXY_USERNAME=your_proxy_username
# PROXY_PASSWORD=your_proxy_password

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_MONITORING=true

# Performance
MAX_WORKERS=4
QUEUE_CONCURRENCY=5
